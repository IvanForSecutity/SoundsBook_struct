<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#fffd51"
    android:id="@+id/activity_alph_active">

    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/alph_pic2"
        android:src="@drawable/arbuz3"
        android:layout_width="120dp"
        android:layout_height="120dp">
    </ImageView>

    <Button
        android:layout_width="44dp"
        android:layout_height="17dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:onClick="GoNextLvl"
        android:background="@drawable/next_button"
        android:id="@+id/button6" />

    <ImageView
        android:id="@+id/alph_pic3"
        android:src="@drawable/arbuz1"
        android:layout_width="120dp"
        android:layout_height="120dp">
    </ImageView>

    <ImageView
        android:id="@+id/alph_pic1"
        android:src="@drawable/arbuz2"
        android:layout_width="120dp"
        android:layout_height="120dp">
    </ImageView>

    <ImageView
        android:id="@+id/alph_pic4"
        android:src="@drawable/grib1"
        android:layout_width="120dp"
        android:layout_height="120dp">
    </ImageView>

    <ImageView
        android:id="@+id/alph_pic_let"
        android:src="@drawable/letter1"
        android:background="@drawable/form_bg"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:scaleType="fitCenter"
        android:padding="20dp">
    </ImageView>
    <ImageView
        android:id="@+id/alph_pic_micro"
        android:src="@drawable/microphone"
        android:layout_width="190dp"
        android:layout_height="284dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:scaleType="fitCenter">
    </ImageView>

</RelativeLayout>