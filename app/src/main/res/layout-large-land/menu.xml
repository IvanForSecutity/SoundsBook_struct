<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <ImageView
        android:layout_width="wrap_content"
        src="@drawable/hedgehog_bottom_left"
        android:layout_alignParentBottom="true"
        android:id="@+id/imageView3"
        android:layout_height="120dp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="92dp"
        android:layout_marginStart="92dp"
        android:id="@+id/button3"
        android:background="@drawable/button_test"
        android:layout_alignBaseline="@+id/button2"
        android:layout_alignBottom="@+id/button2"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2"
        android:onClick="goto_test" />

    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="30dp"
        android:id="@+id/button4"
        android:background="@drawable/button_alphabet"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:onClick="goto_alph" />

    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignTop="@+id/button4"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:id="@+id/button5"
        android:background="@drawable/button_counting"
        android:onClick="goto_count" />

    <Button
        android:layout_width="120dp"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp"
        android:id="@+id/button2"
        android:background="@drawable/button_reading"
        android:layout_height="120dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/button4"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3"
        android:onClick="goto_read" />

</RelativeLayout>