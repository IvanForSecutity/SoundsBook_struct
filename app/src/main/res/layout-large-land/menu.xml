<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <ImageView
        android:src="@drawable/hedgehog_bottom_left"
        android:layout_alignParentBottom="true"
        android:id="@+id/imageView3"
        android:layout_height="180dp"
        android:layout_width="145dp" />

    <Button
        android:id="@+id/button2"
        android:layout_marginBottom="61dp"
        android:layout_marginLeft="229dp"
        android:layout_marginStart="229dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_reading"
        android:onClick="goto_read"
        android:layout_width="180dp"
        android:layout_height="180dp" />
    <Button
        android:id="@+id/button3"
        android:layout_marginBottom="61dp"
        android:layout_marginRight="229dp"
        android:layout_marginEnd="229dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_test"
        android:onClick="goto_test"
        android:layout_width="180dp"
        android:layout_height="180dp" />

    <Button
        android:layout_marginTop="61dp"
        android:layout_marginLeft="229dp"
        android:layout_marginStart="229dp"
        android:id="@+id/button4"
        android:background="@drawable/button_alphabet"
        android:onClick="goto_alph"
        android:layout_width="180dp"
        android:layout_height="180dp" />

    <Button
        android:id="@+id/button5"
        android:layout_marginTop="61dp"
        android:layout_marginRight="229dp"
        android:layout_marginEnd="229dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/button_counting"
        android:onClick="goto_count"
        android:layout_width="180dp"
        android:layout_height="180dp" />
    
</RelativeLayout>